{
    "comments": {
        "lineComment": "//"
    },
    "autoCloseBefore": ";:.,=}])> \n\t",
    "wordPattern": "\\b\\w\\w*\\b",
    "brackets": [
        ["```", "```"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")", "notIn": ["string"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "```", "close": "```", "notIn": ["string", "comment"] },
        ["{", "}"],
        ["[", "]"],
    ],
    "surroundingPairs": [
        ["```", "```"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*region\\b",
            "end": "^\\s*//\\s*endregion\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*|```[^\\]\"'`]*)$",
        "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\](```)].*$"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(if|elif|else|switch|for|while|try|catch|fun|class|ktx).*$",
            "action": {
                "indent": "indent"
            }
        }
    ],
    "colorizedBracketPairs": [
        ["(",")"],
        ["[","]"],
        ["{","}"],
        ["```","```"],
    ]
}